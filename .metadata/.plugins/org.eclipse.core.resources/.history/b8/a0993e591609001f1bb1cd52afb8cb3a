$(function(){
//입력
$('#writeBtn').click(function(){
	$('#nameDiv').empty();
	$('#idDiv').empty();
	$('#pwdDiv').empty();
	
	if($('#name').val() == '')
		$('#nameDiv').text('이름 입력');
	
	else if($('#id').val() == '')
		$('#idDiv').text('아이디 입력');
	
	else if($('#pwd').val() == '')
		$('#pwdDiv').text('비밀번호 입력');
	else
		$.ajax({
			type: 'post',
			url: '/Chapter06_Web/user/write',
			data: $('#writeForm').serialize(),
			success: function(){
				alert('회원가입 완료');
				location.href='/Chapter06_Web/user/list';
			},
			error: function(err){
			console.log(err);
			}	
		});
	});
});